<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<div xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:spring="http://www.springframework.org/tags" version="2.0">

	<jsp:directive.page contentType="text/html;charset=UTF-8" />
	<jsp:output omit-xml-declaration="yes" />

	<spring:message code="label_core_lessons" var="labelCoreLessons" />
	<spring:message code="bnt_change_level" var="bntChangeLevel" />
	<spring:message code="label_recommended_lesson"
		var="labelRecommendedLesson" />
	<spring:message code="bnt_start_lesson" var="bntStartLesson" />
	<spring:message code="label_no_lesson" var="labelNoLessons" />

	<spring:url value="/lesson" var="showLessonUrl" />
	
	<div id="body" class="container">
		<div class="row">
			<div class="span6">
				<h4>${labelCoreLessons}</h4>
				<p/>
				<div class="hero-unit">
					<div class="list-group">
						<c:choose>
							<c:when test="${not empty lessons}">
								<c:forEach items="${lessons}" var="lesson">
									<a href="${showLessonUrl}/${lesson.id}">
										<h4>${lesson.title}</h4>
										<p>${lesson.description}</p>
									</a>
								</c:forEach>
							</c:when>
    						<c:otherwise>
    							<h4>${labelNoLessons}</h4>
    						</c:otherwise>
    					</c:choose>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
